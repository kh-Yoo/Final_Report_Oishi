<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cyan"
    tools:context=".login.FindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/title_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:padding="10dp"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/powder_blue"/>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/find_id_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/find_id_by_email_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_email"
                    android:textColor="@android:color/black"
                    app:met_floatingLabel="normal"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/find_id_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@color/powder_blue"
                    android:text="@string/find_id"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/find_password_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:inputType="text"
                    android:id="@+id/find_pw_by_id_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_id"
                    android:textColor="@android:color/black"
                    app:met_floatingLabel="normal"
                    android:layout_marginTop="20dp"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/find_pw_by_email_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_email"
                    android:textColor="@android:color/black"
                    app:met_floatingLabel="normal"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/find_pw_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@color/powder_blue"
                    android:text="@string/find_password"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
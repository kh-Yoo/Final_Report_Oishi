<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alter_phone_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powder_blue"
    tools:context="com.example.oishi.purchase.Phone_number_alter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/present_phone_number"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@color/light_cyan"
            android:padding="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/present_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="예) 010-9398-7103"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@color/light_cyan"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/new_phone_number"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@color/light_cyan"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:inputType="phone"
            android:id="@+id/new_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="예) 010-XXXX-YYYY"
            android:textSize="18sp"
            android:background="@color/light_cyan"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:autofillHints="no"/>

    </LinearLayout>

    <Button
        android:id="@+id/alter_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/alter_phone_number"
        android:textSize="20sp"
        android:background="@color/light_cyan"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
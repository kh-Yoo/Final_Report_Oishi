<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_cyan</item>
        <item name="colorPrimaryDark">@color/powder_blue</item>
        <item name="colorAccent">@color/sky_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_cyan</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@android:color/black</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@android:color/black</item>                    <!-- 하단 움직이는 바 색-->
    </style>

</resources>
